MDNavigationLayout:
    MDScreenManager:
        id: screen_manager

        MDScreen:
            name: "main"

            MDScrollView:
                MDBoxLayout:
                    adaptive_height: True
                    orientation: "vertical"
                    spacing: "15dp"

                    MDTopAppBar:
                        MDTopAppBarLeadingButtonContainer:
                            MDActionTopAppBarButton:
                                icon: "menu"
                                do_scroll_x: False
                                adaptive_size: True
                                on_release: nav_drawer.set_state("toggle")


                    MDBoxLayout:
                        adaptive_height: True
                        orientation: "vertical"
                        spacing: "20dp"
                        padding: "20dp"

                        MDLabel:
                            text: "Диаметр вала"

                        MDTextField:
                            id: shaft_diameter_text_field
                            mode: "outlined"
                            input_filter: "float"

                            MDTextFieldLeadingIcon:
                                icon: "diameter-variant"

                            MDTextFieldHintText:
                                text: "Введите диаметер вала в мм"

                        MDLabel:
                            text: "Поле допуск вала"

                        MDTextField:
                            id: shaft_tolerance_range_text_field

                            MDTextFieldMaxLengthText:
                                max_text_length: 4

                        MDLabel:
                            text: "Диаметр отверстия"

                        MDTextField:
                            id: hole_diameter_text_field
                            mode: "outlined"
                            input_filter: "float"

                            MDTextFieldLeadingIcon:
                                icon: "diameter-variant"

                            MDTextFieldHintText:
                                text: "Введите диаметер отверстия в мм"

                        MDLabel:
                            text: "Поле допуска отверстия"

                        MDTextField:
                            id: hole_tolerance_range_text_field

                            MDTextFieldMaxLengthText:
                                max_text_length: 4

                        MDLabel:
                            text: "Верхнее отклонение вала"

                        MDLabel:
                            id: upper_shaft_deflection_label

                        MDLabel:
                            text: "Нижнее отклонение вала"

                        MDLabel:
                            id: lower_shaft_deflection_label

                        MDLabel:
                            text: "Верхнее отклонение отверстия"

                        MDLabel:
                            id: upper_hole_deflection_label

                        MDLabel:
                            text: "Нижнее отклонение отверстия"

                        MDLabel:
                            id: lower_hole_deflection_label

                        MDLabel:
                            text: "Допуск вала"

                        MDLabel:
                            id: shaft_tolerance_label

                        MDLabel:
                            text: "Допуск отверстия"

                        MDLabel:
                            id: hole_tolerance_label

                        MDLabel:
                            text: "Максимальный гарантированный зазор"

                        MDLabel:
                            id: maximum_guaranteed_clearance_label

                        MDLabel:
                            text: "Минимальный гарантированный зазор"

                        MDLabel:
                            id: minimum_guaranteed_clearance_label

                        MDLabel:
                            text: "Посадка"

                        MDLabel:
                            id: fit_label

                        MDLabel:
                            text: "Система посадки"

                        MDLabel:
                            id: fit_system_label

                        MDButton:
                            pos_hint: {"center_x": 0.5}
                            on_press: app.fill_labels()

                            MDButtonText:
                                text: "Рассчитать"

        MDScreen:
            name: "donation"
            adaptive_height: False

            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                pos_hint: {"top": 1}

                MDTopAppBar:
                    MDTopAppBarLeadingButtonContainer:
                        MDActionTopAppBarButton:
                            icon: "menu"
                            do_scroll_x: False
                            adaptive_size: True
                            on_release: nav_drawer.set_state("toggle")


                MDBoxLayout:
                    orientation: "vertical"
                    adaptive_height: True
                    spacing: "20dp"
                    padding: "10dp", "20dp", "10dp", "20dp" 

                    MDLabel:
                        text: "BTC"

                    MDButton:
                        on_press: app.copy_bitcoin_address()

                        MDButtonText:
                            text: "Скопировать bitcoin-адрес"

                    MDLabel:
                        text: "ETH"

                    MDButton:
                        on_press: app.copy_etherium_address()

                        MDButtonText:
                            text: "Скопировать etherium-адрес"

                    MDLabel:
                        text: "SOL"

                    MDButton:
                        on_press: app.copy_solana_address()

                        MDButtonText:
                            text: "Скопировать solana-адрес"

    MDNavigationDrawer:
        id: nav_drawer

        MDNavigationDrawerMenu:
            MDNavigationDrawerItem:
                on_press: app.open_main_screen()

                MDNavigationDrawerItemLeadingIcon:
                    icon: "calculator-variant"

                MDNavigationDrawerItemText:
                    text: "Допуски и посадки"

            MDNavigationDrawerItem:
                on_press: app.open_donation_screen()

                MDNavigationDrawerItemLeadingIcon:
                    icon: "currency-usd"

                MDNavigationDrawerItemText:
                    text: "Донат"

