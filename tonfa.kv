MDNavigationLayout:
    MDScreenManager:
        MDScreen:
            MDScrollView:
                MDBoxLayout:
                    adaptive_height: True
                    orientation: "vertical"
                    spacing: "15dp"

                    MDTopAppBar:
                        MDTopAppBarLeadingButtonContainer:
                            MDActionTopAppBarButton:
                                icon: "menu"
                                do_scroll_x: False
                                adaptive_size: True
                                on_release: nav_drawer.set_state("toggle")

                    MDBoxLayout:
                        adaptive_height: True
                        orientation: "vertical"
                        spacing: "20dp"
                        padding: "20dp"

                        MDLabel:
                            text: "Диаметр вала"

                        MDTextField:
                            id: shaft_diameter_text_field
                            mode: "outlined"
                            input_filter: "float"

                            MDTextFieldLeadingIcon:
                                icon: "diameter-variant"

                            MDTextFieldHintText:
                                text: "Введите диаметер вала в мм"

                        MDLabel:
                            text: "Поле допуск вала"

                        MDTextField:
                            on_text_validate:
                                app.validate_shaft_tolerance_range(self.text)

                            MDTextFieldMaxLengthText:
                                max_text_length: 4

                        MDLabel:
                            text: "Диаметр отверстия"

                        MDTextField:
                            id: hole_diameter_text_field
                            mode: "outlined"
                            input_filter: "float"

                            MDTextFieldLeadingIcon:
                                icon: "diameter-variant"

                            MDTextFieldHintText:
                                text: "Введите диаметер отверстия в мм"

                        MDLabel:
                            text: "Поле допуска отверстия"

                        MDTextField:
                            on_text_validate:
                                app.validate_hole_tolerance_range(self.text)

                            MDTextFieldMaxLengthText:
                                max_text_length: 4

                        MDLabel:
                            text: "Верхнее отклонение вала"

                        MDLabel:
                            id: upper_shaft_deflection_label

                        MDLabel:
                            text: "Нижнее отклонение вала"

                        MDLabel:
                            id: lower_shaft_deflection_label

                        MDLabel:
                            text: "Верхнее отклонение отверстия"

                        MDLabel:
                            id: upper_hole_deflection_label

                        MDLabel:
                            text: "Нижнее отклонение отверстия"

                        MDLabel:
                            id: lower_hole_deflection_label

                        MDLabel:
                            text: "Максимальный гарантированный зазор"

                        MDLabel:
                            id: maximum_guaranteed_clearance_label

                        MDLabel:
                            text: "Минимальный гарантированный зазор"

                        MDLabel:
                            id: minimum_guaranteed_clearance_label

                        MDLabel:
                            text: "Посадка"

                        MDLabel:
                            id: fit_label

                        MDLabel:
                            text: "Система посадки"

                        MDLabel:
                            id: fit_system_label

                        MDButton:
                            pos_hint: {"center_x": 0.5}

                            MDButtonText:
                                text: "Рассчитать"

    MDNavigationDrawer:
        id: nav_drawer

        MDNavigationDrawerMenu:
            MDNavigationDrawerItem:
                id: donate_button

                MDNavigationDrawerItemLeadingIcon:
                    icon: "currency-usd"

                MDNavigationDrawerItemText:
                    text: "Донат"

