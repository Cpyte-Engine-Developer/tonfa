MDNavigationLayout:
    MDScreenManager:
        id: screen_manager
        md_bg_color: self.theme_cls.backgroundColor

        MDScreen:
            name: "main"

            MDScrollView:
                MDBoxLayout:
                    adaptive_height: True
                    orientation: "vertical"

                    MDTopAppBar:
                        MDTopAppBarLeadingButtonContainer:
                            MDActionTopAppBarButton:
                                icon: "menu"
                                do_scroll_x: False
                                adaptive_size: True
                                on_release: nav_drawer.set_state("toggle")


                    MDBoxLayout:
                        adaptive_height: True
                        orientation: "vertical"
                        spacing: "30dp"
                        padding: "20dp"

                        MDLabel:
                            text: _("Диаметр")

                        MDTextField:
                            id: diameter_text_field
                            mode: "outlined"
                            input_filter: "float"

                            MDTextFieldLeadingIcon:
                                icon: "diameter-variant"

                        MDLabel:
                            text: _("Класс допуска вала")

                        MDTextField:
                            id: shaft_tolerance_class_text_field

                            MDTextFieldMaxLengthText:
                                max_text_length: 4

                        MDLabel:
                            text: _("Класс допуска отверстия")

                        MDTextField:
                            id: hole_tolerance_class_text_field

                            MDTextFieldMaxLengthText:
                                max_text_length: 4

                        MDLabel:
                            text: _("Верхнее предельное отклонение вала")

                        MDLabel:
                            id: es_label
                            bold: True

                        MDLabel:
                            text: _("Нижнее предельное отклонение вала")

                        MDLabel:
                            id: ei_label
                            bold: True

                        MDLabel:
                            text: _("Верхнее предельное отклонение отверстия")

                        MDLabel:
                            id: ES_label
                            bold: True

                        MDLabel:
                            text: _("Нижнее предельное отклонение отверстия")

                        MDLabel:
                            id: EI_label
                            bold: True

                        MDLabel:
                            text: _("Допуск вала")

                        MDLabel:
                            id: shaft_tolerance_label
                            bold: True

                        MDLabel:
                            text: _("Допуск отверстия")

                        MDLabel:
                            id: hole_tolerance_label
                            bold: True

                        MDLabel:
                            text: _("Максимальный гарантированный зазор")

                        MDLabel:
                            id: maximum_clearance_label
                            bold: True

                        MDLabel:
                            text: _("Минимальный гарантированный зазор")

                        MDLabel:
                            id: minimum_clearance_label
                            bold: True

                        MDLabel:
                            text: _("Посадка")

                        MDLabel:
                            id: fit_label
                            bold: True

                        MDLabel:
                            text: _("Система посадки")

                        MDLabel:
                            id: fit_system_label
                            bold: True

                        MDButton:
                            pos_hint: {"center_x": 0.5}
                            on_press: app.fill_labels()

                            MDButtonText:
                                text: _("Рассчитать")

        MDScreen:
            name: "donation"
            adaptive_height: False

            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                pos_hint: {"top": 1}

                MDTopAppBar:
                    MDTopAppBarLeadingButtonContainer:
                        MDActionTopAppBarButton:
                            icon: "menu"
                            do_scroll_x: False
                            adaptive_size: True
                            on_release: nav_drawer.set_state("toggle")

                MDBoxLayout:
                    orientation: "vertical"
                    adaptive_height: True
                    spacing: "30dp"
                    padding: "20dp"

                    MDLabel:
                        text: "BTC"

                    MDButton:
                        on_press: app.copy_bitcoin_address()

                        MDButtonText:
                            text: _("Скопировать bitcoin-адрес")

                    MDLabel:
                        text: "ETH"

                    MDButton:
                        on_press: app.copy_etherium_address()

                        MDButtonText:
                            text: _("Скопировать etherium-адрес")

                    MDLabel:
                        text: "SOL"

                    MDButton:
                        on_press: app.copy_solana_address()

                        MDButtonText:
                            text: _("Скопировать solana-адрес")

        MDScreen:
            name: "settings"

            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                pos_hint: {"top": 1}

                MDTopAppBar:
                    MDTopAppBarLeadingButtonContainer:
                        MDActionTopAppBarButton:
                            icon: "menu"
                            do_scroll_x: False
                            adaptive_size: True
                            on_release: nav_drawer.set_state("toggle")

                MDBoxLayout:
                    orientation: "vertical"
                    adaptive_height: True
                    spacing: "30dp"
                    padding: "20dp"

                    MDBoxLayout:
                        adaptive_height: True

                        MDLabel:
                            text: _("Светлая тема")
                        MDSwitch:
                            on_active: app.theme_cls.switch_theme()

    MDNavigationDrawer:
        id: nav_drawer

        MDNavigationDrawerMenu:
            MDNavigationDrawerItem:
                on_press: app.open_main_screen()

                MDNavigationDrawerItemLeadingIcon:
                    icon: "calculator-variant"

                MDNavigationDrawerItemText:
                    text: _("Допуски и посадки")

            MDNavigationDrawerItem:
                on_press: app.open_donation_screen()

                MDNavigationDrawerItemLeadingIcon:
                    icon: "currency-usd"

                MDNavigationDrawerItemText:
                    text: _("Донат")

            MDNavigationDrawerItem:
                on_press: app.open_settings_screen()

                MDNavigationDrawerItemLeadingIcon:
                    icon: "cog"

                MDNavigationDrawerItemText:
                    text: _("Настройки")

