MDNavigationLayout:
    MDScreenManager:
        MDScreen:
            MDScrollView:
                MDBoxLayout:
                    adaptive_height: True
                    orientation: "vertical"
                    spacing: "15dp"

                    MDTopAppBar:
                        MDTopAppBarLeadingButtonContainer:
                            MDActionTopAppBarButton:
                                icon: "menu"
                                do_scroll_x: False
                                adaptive_size: True

                    MDLabel:
                        text: "Система вала"

                    MDTextField:
                        mode: "outlined"

                        MDTextFieldLeadingIcon:
                            icon: "diameter-variant"

                        MDTextFieldHintText:
                            text: "Введите диаметер вала в мм"

                        MDTextFieldMaxLengthText:
                            max_text_length: 4

                    # TODO do dropdown menu for letter of tolerance range
                    # TODO do dropdown menu for number of tolerance range

                    MDLabel:
