MDNavigationLayout:
    MDScreenManager:
        MDScreen:
            MDScrollView:
                MDBoxLayout:
                    adaptive_height: True
                    orientation: "vertical"
                    spacing: "15dp"

                    MDTopAppBar:
                        MDTopAppBarLeadingButtonContainer:
                            MDActionTopAppBarButton:
                                icon: "menu"
                                do_scroll_x: False
                                adaptive_size: True
                                on_release: nav_drawer.set_state("toggle")

                    MDLabel:
                        text: "Диаметр вала"

                    MDTextField:
                        id: shaft_diameter_text_field
                        mode: "outlined"

                        MDTextFieldLeadingIcon:
                            icon: "diameter-variant"

                        MDTextFieldHintText:
                            text: "Введите диаметер вала в мм"

                        MDTextFieldMaxLengthText:
                            max_text_length: 4

                    MDLabel:
                        text: "Поле допуск вала"

                    MDButton:
                        style: "filled"
                        on_press: app.open_shaft_tolerance_range_letters_menu()

                        MDButtonText:
                            id: shaft_tolerance_range_letters_text
                            text: "Выберите букву поля допуска"

                    MDButton:
                        style: "filled"
                        on_press: app.open_shaft_tolerance_range_numbers_menu()

                        MDButtonText:
                            id: shaft_tolerance_range_number_text
                            text: "Выберите число поля допуска"

                    MDLabel:
                        text: "Диаметр отверстия"

                    MDTextField:
                        id: hole_diameter_text_field
                        mode: "outlined"

                        MDTextFieldLeadingIcon:
                            icon: "diameter-variant"

                        MDTextFieldHintText:
                            text: "Введите диаметер отверстия в мм"

                        MDTextFieldMaxLengthText:
                            max_text_length: 4

                    MDLabel:
                        text: "Поле допуска отверстия"

                    MDButton:
                        style: "filled"

                        MDButtonText:
                            id: hole_tolerance_range_letters_text
                            text: "Выберите букву поля допуска"

                    MDButton:
                        style: "filled"

                        MDButtonText:
                            id: hole_tolerance_range_number_text
                            text: "Выберите число поля допуска"

                    MDLabel:
                        text: "Верхнее отклонение вала"

                    MDLabel:
                        id: upper_shaft_deflection_label

                    MDLabel:
                        text: "Нижнее отклонение вала"

                    MDLabel:
                        id: lower_shaft_deflection_label

                    MDLabel:
                        text: "Верхнее отклонение отверстия"

                    MDLabel:
                        id: upper_hole_deflection_label

                    MDLabel:
                        text: "Нижнее отклонение отверстия"

                    MDLabel:
                        id: lower_hole_deflection_label

                    MDLabel:
                        text: "Максимальный гарантированный зазор"

                    MDLabel:
                        id: maximum_guaranteed_clearance_label

                    MDLabel:
                        text: "Минимальный гарантированный зазор"

                    MDLabel:
                        id: minimum_guaranteed_clearance_label

                    MDLabel:
                        text: "Посадка"

                    MDLabel:
                        id: fit_label

                    MDLabel:
                        text: "Система посадки"

                    MDLabel:
                        id: fit_system_label

    MDNavigationDrawer:
        id: nav_drawer

        MDNavigationDrawerMenu:
            MDNavigationDrawerItem:
                id: settings_button

                MDNavigationDrawerItemLeadingIcon:
                    icon: "cog"

                MDNavigationDrawerItemText:
                    text: "Настройки"

            MDNavigationDrawerItem:
                id: donate_button

                MDNavigationDrawerItemLeadingIcon:
                    icon: "currency-usd"

                MDNavigationDrawerItemText:
                    text: "Донат"

